simple-dlg {
	position: absolute;
	background: var(--bkg-dlg);
	border: solid 1px var(--bdr-60);
	border-radius: .5rem;
	box-shadow: var(--elev-08-shadow);
	z-index: 100;
	height: auto;
	width: auto;

	display: grid;
	grid-template-rows: auto 1fr auto;
	gap: 1rem;


	& > section {
		padding: 0 1rem;
	}

}