tabs-p {
	display: grid;
	grid-template-rows: auto 1fr;

	& > nav {
		padding-left: 1rem;
		display: flex;
		gap: 1rem;
		border-bottom: solid 1px var(--bdr);

		& > label {
			cursor: pointer;
			padding: 0.5rem 1rem;
			border: solid 1px var(--bdr);
			border-bottom: none;
			border-radius: .5rem .5rem 0 0;

			&.sel {
				background: var(--bkg-sel);
				font-weight: 600;
			}
		}
	}

	& > section {
		display: grid;
	}
}